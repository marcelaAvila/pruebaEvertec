<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecommerce">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_3ig"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_3ig_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.example.ecommerce.activities.PagoActivity"></activity>
        <activity
            android:name="com.example.ecommerce.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.ecommerce.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ecommerce.activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.ecommerce.activities.CartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.ecommerce.activities.DatosPagoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.ecommerce.activities.ConfirmacionPagoActivity"
            android:screenOrientation="portrait" />


    </application>

</manifest>